{
  "name": "qui-lib",
  "version": "0.0.6",
  "main": "dist/qui.umd.js",
  "module": "dist/qui.module.js",
  "typings": "dist/index.d.ts",
  "author": "Alexander Gr√§fenstein",
  "license": "MIT",
  "description": "Quick UI - lightweight ui controls library for javascript",
  "scripts": {
    "build": "npm run build:scss & npm run build:scss:min & npm run build:rollup",
    "watch": "npm run watch:scss & npm run watch:rollup",
    "build:rollup": "rollup -c rollup.config.js",
    "build:scss": "sass src/style/qui.scss dist/qui.css",
    "build:scss:min": "sass src/style/qui.scss dist/qui.min.css --style=compressed",
    "watch:scss": "sass --watch src/style/qui.scss dist/qui.css",
    "watch:rollup": "rollup -w -c rollup.config.js",
    "publish": "npm run build && npm publish --access=public"
  },
  "devDependencies": {
    "@types/mithril": "^1.1.13",
    "gulp-plumber": "^1.2.0",
    "rollup": "^0.66.6",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-typescript2": "^0.17.2",
    "rollup-watch": "^4.3.1",
    "sass": "^1.14.3",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "mithril": "^1.1.6"
  }
}
