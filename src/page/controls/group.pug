p A group with a title header
+example#example-group-1
  script(type="text/javascript").language-javascript.
    TweakUi.mount("#example-group-1", (ui) => {
      ui.group("A Group", () => {
        ui.button("Button")
        ui.button("Button")
        ui.button("Button")
      })
    })

p Groups may be collapsible
+example#example-group-2
  script(type="text/javascript").language-javascript.
    TweakUi.mount("#example-group-2", (ui) => {
      ui.group("A Group", { collapsible: true }, () => {
        ui.button("Button")
        ui.button("Button")
        ui.button("Button")
      })
    })

p Nested groups
+example#example-group-3
  script(type="text/javascript").language-javascript.
    TweakUi.mount("#example-group-3", (ui) => {
      ui.group("A Group", { collapsible: true }, () => {
        ui.group("Sub group", { collapsible: true }, () => {
          ui.button("Button")
          ui.button("Button")
          ui.button("Button")
        })
        ui.group("Sub group", { collapsible: true }, () => {
          ui.button("Button")
          ui.button("Button")
          ui.button("Button")
        })
      })
    })
